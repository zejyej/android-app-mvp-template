<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="1">

    <!--toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7" >
        <ImageView
            android:id="@+id/ivBack"
            android:layout_gravity="left"
            android:src="@drawable/fanhuijiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_zhongjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#333333"
            android:text="注册"
            />

    </android.support.v7.widget.Toolbar>
    <View
        android:id="@+id/view1"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ebebeb"/>

    <!--*****************手机号*********************-->
    <RelativeLayout
        android:id="@+id/rl_account"
        android:layout_below="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <TextView
            android:id="@+id/zhanghaotv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="手机号"
            android:textColor="#333333"
            android:textSize="15sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:hintEnabled="false"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/zhanghaotv">

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入手机号码"
                android:imeOptions="actionNext"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_below="@id/rl_account"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ebebeb"
        android:layout_marginLeft="30dp"/>

    <!--***************************密码**********************************-->
    <RelativeLayout
        android:id="@+id/pwd"
        android:layout_below="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:id="@+id/mimatv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="密    码"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_pwd"
            android:layout_toRightOf="@id/mimatv"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            app:hintEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:hint="请输入6-16位字母和数字的密码"
                android:imeOptions="actionNext"
                android:textSize="15sp"
                android:background="@null"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_below="@id/pwd"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ebebeb"
        android:layout_marginLeft="30dp"/>

    <!--验证码-->
    <RelativeLayout
        android:id="@+id/rl_verify"
        android:layout_below="@id/view3"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:id="@+id/yanzhengtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="验    证"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <android.support.design.widget.TextInputLayout
            android:layout_toRightOf="@id/yanzhengtv"
            android:layout_marginLeft="16dp"
            android:id="@+id/til_yanzheng"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            app:hintEnabled="false"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etVerifyCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入验证码"
                android:background="@null"
                android:textSize="15sp"
                android:imeOptions="actionDone"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>
        <FrameLayout
            android:id="@+id/flGetVerifyCodeWithSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:src="@drawable/juxing2"/>
            <TextView
                android:id="@+id/tvGetVerifyCodeWithSMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="获取验证码"
                android:textSize="12sp"
                />
        </FrameLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view4"
        android:layout_below="@id/rl_verify"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ebebeb"
        android:layout_marginLeft="30dp"/>

    <!--邀请码-->
    <RelativeLayout
        android:id="@+id/rl_invite"
        android:layout_below="@id/view4"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:id="@+id/yaoqingmatv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="邀请码"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_yaoqingma"
            android:layout_toRightOf="@id/yaoqingmatv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_yaoqingma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:hint="请输入邀请码"
                android:textSize="15sp"
                android:background="@null"
                android:imeOptions="actionDone"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>
        <FrameLayout
            android:id="@+id/frame_getyaoqingma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:src="@drawable/juxing2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="获取邀请码"
                android:textSize="12sp"
                />
        </FrameLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view5"
        android:layout_below="@id/rl_invite"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ebebeb"
        android:layout_marginLeft="30dp"/>
    <LinearLayout

        android:layout_below="@id/view5"
        android:id="@+id/ll_agree"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkBox"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/app_custom_checkbox"/>
        <TextView
            android:id="@+id/tv_xieyi"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#333333"
            android:text="同意注册协议"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tvVoice"
        android:textSize="15sp"
        android:layout_marginTop="14dp"
        android:gravity="end"
        android:singleLine="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll_agree"
        android:layout_alignParentRight="true"
        android:text="收不到验证码？试试语音"
        android:textColor="@color/surelyred"/>

    <Button
        android:layout_below="@id/ll_agree"
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/xiayibu"
        />

    <TextView
        android:id="@+id/tvConsult"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawableTop="@mipmap/icon_kefu"
        android:layout_marginBottom="33dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="7dp"
        android:textSize="12sp"
        android:textColor="#3b3b3b"
        android:text="咨询客服"/>
</RelativeLayout>